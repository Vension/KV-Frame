<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/mCommonTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:statusBarColor="@color/app_main_thme_color"
        titlebar:titleBarColor="@color/app_main_thme_color"
        titlebar:centerType="textView"
        titlebar:centerText="我的"
        titlebar:centerTextColor="@android:color/white"
        titlebar:centerTextSize="18sp"
        titlebar:showBottomLine="false"
        titlebar:bottomShadowHeight="2dip"
        />

</FrameLayout>