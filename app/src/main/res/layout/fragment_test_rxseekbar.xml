<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <com.vension.customview.RxSeekBar
        android:id="@+id/seekbar1"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginTop="@dimen/MarginSize_12"
        android:layout_centerVertical="true"
        app:cellMode="number"
        app:isHintHolder="true"
        app:lineColorEdge="@color/gray"
        app:lineColorSelected="@color/colorAccent"
        app:markTextArray="@array/markArray"
        app:seekBarMode="single"
        app:seekBarResId="@drawable/seekbar_thumb"/>


    <TextView
        android:textColor="@color/gray"
        android:id="@+id/progress2_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"/>

    <com.vension.customview.RxSeekBar
        android:id="@+id/seekbar2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cellMode="number"
        app:lineColorEdge="@color/gray"
        app:lineColorSelected="@color/colorAccent"
        app:markTextArray="@array/markArray2"
        app:maxProgress="1"
        app:minProgress="-1"
        app:seekBarHeight="4dp"
        app:seekBarMode="range"
        app:textPadding="17dp"
        app:thumbPrimaryColor="@color/gray"
        app:thumbSecondaryColor="@color/colorAccent"
        app:thumbSize="20dp"/>

    <com.vension.customview.RxSeekBar
        android:id="@+id/seekbar3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cellMode="other"
        app:hintBGHeight="50dp"
        app:hintBGWith="60dp"
        app:lineColorEdge="@color/gray"
        app:lineColorSelected="@color/colorAccent"
        app:markTextArray="@array/negativeMarkArray"
        app:maxProgress="100"
        app:minProgress="-100"
        app:reserve="60"
        app:seekBarHeight="2dp"
        app:seekBarMode="range"
        app:textPadding="17dp"
        app:textSize2="16sp"
        app:thumbSize="26dp"/>

    <com.vension.customview.RxSeekBar
        android:id="@+id/seekbar4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cellMode="other"
        app:cells="4"
        app:hideProgressHint="true"
        app:hintBGHeight="28dp"
        app:lineColorEdge="@color/gray"
        app:lineColorSelected="@color/colorPrimary"
        app:markTextArray="@array/wordsArray"
        app:seekBarHeight="8dp"
        app:seekBarMode="single"
        app:textPadding="17dp"
        app:textSize2="12sp"
        app:thumbSize="26dp"/>

    <com.vension.customview.HorizontalProgressBar
        android:id="@+id/horizontal_progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />


</LinearLayout>