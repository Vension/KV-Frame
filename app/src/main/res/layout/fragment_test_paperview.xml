<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="120dip"
        android:layout_height="180dip"
        android:elevation="5dip"
        android:layout_margin="@dimen/MarginSize_10"
        android:layout_gravity="center_horizontal">
        <com.vension.customview.paperview.PaperView
            android:id="@+id/paperView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
        <TextView
            android:id="@+id/text_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="paperview"
            android:textColor="@color/app_main_thme_color"
            android:textSize="@dimen/abc_text_size_title_material" />
    </RelativeLayout>



    <com.vension.customview.tagview.TagView
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white"
        android:layout_margin="@dimen/MarginSize_10"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginTop="16dip"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/note_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:text="xsda"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    android:textStyle="normal|bold" />
                <TextView
                    android:id="@+id/note_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="xsda"
                    android:textColor="#b4000000"
                    android:textSize="@dimen/abc_text_size_subhead_material" />
            </LinearLayout>
            <TextView
                android:id="@+id/note_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:text="xsda"
                android:textColor="#b4000000"
                android:textSize="@dimen/abc_text_size_small_material" />
        </LinearLayout>
    </com.vension.customview.tagview.TagView>

</LinearLayout>